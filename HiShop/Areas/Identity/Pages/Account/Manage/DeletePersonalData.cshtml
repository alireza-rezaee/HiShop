@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "حذف اطلاعات شخصی";
    //ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning">
    <p>
        <strong>با حذف این اطلاعات ، حساب کاربری شما به طور دائمی حذف خواهد کرد به طوری که دیگر قابل بازیابی نخواهد بود.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        }
        <button class="btn btn-danger" type="submit">
            <i class="fas fa-trash"></i>
            حذف اطلاعات و خروج از سایت
        </button>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}