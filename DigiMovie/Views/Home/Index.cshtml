@{
    ViewData["Title"] = "خانه";
}
@section Head{
    <meta name="description" content="وب سایت دیجی مووی برترین وب سایت در زمینه فیلم و سریال - @ViewData["Title"]" />
}

    <div class="row">
        <div class="md">

            <div id="car" class="carousel slide w-75 mx-auto" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#car" data-slide-to="0" class="active"></li>
                    <li data-target="#car" data-slide-to="1"></li>
                    <li data-target="#car" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/Carousel/1.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Spider Man</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Carousel/2.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Green Book</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/Carousel/3.jpg">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Avangers</h5>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#car"  data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#car" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>