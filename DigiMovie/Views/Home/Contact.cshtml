@{
    ViewData["Title"] = "تماس با ما";
}
@section Head{
    <meta name="description" content="وب سایت دیجی مووی برترین وب سایت در زمینه فیلم و سریال - @ViewData["Title"]" />
}

<div class="row">
    <div class="md my-5">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>



<form asp-action="ContactProcess" method="get">
    <div class="row">
        <div class="col-md">
            <div class="form-group text-right">
                <label for="name">نام :</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
        </div>
        <div class="col-md">
            <div class="form-group text-right">
                <label for="subject"> موضوع پیام :</label>
                <input type="text" class="form-control" id="subject" name="subject">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <div class="form-group text-right">
                <label for="email">پست الکترونیکی :</label>
                <input type="email" class="form-control" id="email" name="email">
            </div>
        </div>
        <div class="col-md">
            <div class="form-group text-right">
                <label for="body">متن پیام :</label>
                <textarea class="form-control" id="body" name="body" rows="7"></textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md text-right">
            <button type="submit" class="btn btn-success">
                <i class="fa fa-paper-plane" aria-hidden="true"></i>
                ارسال پیام
            </button>
        </div>
    </div>
</form>

