<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="فیلم,سریال,دانلود,انیمیشن,کارتون" />
    <title>@ViewData["Title"] - دیجی مووی</title>

    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="shortcut icon" href="~/favicon.ico">

    <meta property="og:title" content="دیجی مووی" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://digimovie.emoh.ir" />
    <meta property="og:image" content="http://digimovie.emoh.ir/images/Template/logo.png" />
    <meta property="og:description" content="ایمو؛ سید احسان محمدی - تدریس خصوصی ، طراحی وب سایت و توسعه نرم افزارهای تحت وب" />

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    @RenderSection("Head", required: false)
</head>
<body style="background-color:#ddd">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand text-success" href="/" >
            
            <img src="~/images/Template/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
            دیجی مووی
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse text-right" id="navContent">
            <ul class="navbar-nav mx-auto">
                <li><hr class="my-0 bg-light" /></li>
                <li class="nav-item active pl-5">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-info">
                        <i class="fa fa-home align-middle"></i>
                        خانه
                    </a>
                </li>
                <li><hr class="my-0 bg-light" /></li>
                <li class="nav-item pl-5">
                    <a asp-area="" asp-controller="Home" asp-action="About" class="nav-link text-info">
                        <i class="fas fa-file-signature align-middle"></i>
                        درباره ما
                    </a>
                </li>
                <li><hr class="my-0 bg-light" /></li>
                <li class="nav-item pl-5">
                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link text-info">
                        <i class="fas fa-phone align-middle"></i>
                        تماس با ما
                    </a>
                </li>
                <li><hr class="my-0 bg-light" /></li>
                <partial name="_LoginPartial" />
            </ul>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; 2019 - دیجی مووی</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/bootstrap.bundle.js"></script>
        <script src="~/lib/font-awesome/all.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="http://code.jquery.com/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script defer src="https://use.fontawesome.com/releases/v5.7.2/js/all.js" integrity="sha384-0pzryjIRos8mFBWMzSSZApWtPl/5++eIfzYmTgBBmXYdhvxPc+XcFEk+zJwDgWbP" crossorigin="anonymous"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
